= form_for [@store, @article], :html => {class: 'form-horizontal'}  do |f|
  - if @article.errors.any?
    .row
      #error_explanation.offset1.span7
        %h2= "You got an error!"
        %ul
          - @article.errors.full_messages.each do |msg|
            %li= msg

  .row
    .span12
      .control-group
        = f.label :name, :class => "control-label"
        .controls
          = f.text_field :name, :placeholder => 'Article name', :class => 'span6'
      .control-group
        = f.label :description, :class => "control-label"
        .controls
          = f.text_area :description, :rows => 5, :class => 'span6'
      .control-group
        = f.label :price, :class => "control-label"
        .controls
          = f.text_field :price, :class => 'span6'
      .control-group
        = f.label :total_in_shelf, :class => "control-label"
        .controls
          = f.text_field :total_in_shelf, :class => 'span6'
      .control-group
        = f.label :total_in_vault, :class => "control-label"
        .controls
          = f.text_field :total_in_vault, :class => 'span6'
      .control-group
        .controls
          = f.submit 'Save', :class => "btn btn-default"
