= form_for @store, :html => {class: 'form-horizontal'} do |f|
  - if @store.errors.any?
    .row
      #error_explanation.offset1.span7
        %h2= "You got an error!"
        %ul
          - @store.errors.full_messages.each do |msg|
            %li= msg
  .row
    .span12
      .control-group
        = f.label :name, :class => "control-label"
        .controls
          = f.text_field :name, :placeholder => 'Store name', :class => 'span6'
      .control-group
        = f.label :address, :class => "control-label"
        .controls
          = f.text_area :address, :rows => 5, :class => 'span6'
      .control-group
        .controls
          = f.submit 'Save', :class => "btn btn-default"
